@using System.Web.Optimization
@using Kendo.Mvc.UI
@using Kendo.Mvc.Extensions
@Model MarketingApp.Model.Staff.SalesPerson

@{
    ViewBag.Title = "StaffList";
}

@(Html.Kendo().Grid<MarketingApp.Model.Staff.SalesPerson>()
    .Name("grid")
    .Columns(columns => {
        columns.Bound(p => p.Id);
        columns.Bound(p => p.Name).Title("Name");
        columns.Bound(p => p.Lastname);
        columns.Bound(p => p.Code);
        columns.Bound(p => p.Commission);
        columns.Bound(p => p.Phone_number);
        columns.Bound(p => p.Mobile);
        columns.Bound(p => p.Address);

    })
    .Pageable()
    .Sortable()
    .Scrollable()
    .Filterable()
    .HtmlAttributes(new { style = "height:550px;" })
    .DataSource(dataSource => dataSource
        .Ajax()
        .PageSize(20)
        .Read(read => read.Action("GetStaff", "Home"))
     )
)
